@model SnackLab.Entities.Product

@{
    ViewBag.Title = "Nieuw product toevoegen";
}

<h2 class="mb-4">Nieuw product toevoegen</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="mb-3">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Naam van het product" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Price)
        @Html.TextBoxFor(m => m.Price, new { @class = "form-control", type = "number", step = "0.01", placeholder = "Prijs in euro" })
        @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Description)
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 3, placeholder = "Korte beschrijving" })
        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Category)
        @Html.DropDownListFor(m => m.Category, new SelectList(new[] {
            "Snoep", "Drankjes", "Chips", "Limited"
        }), "-- Kies een categorie --", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Category, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.ImageUrl)
        @Html.TextBoxFor(m => m.ImageUrl, new { @class = "form-control", placeholder = "Volledige URL naar afbeelding (optioneel)" })
        @Html.ValidationMessageFor(m => m.ImageUrl, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Opslaan</button>
    @Html.ActionLink("Terug naar lijst", "Index", null, new { @class = "btn btn-secondary ms-2" })
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
